<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Evento:<%= @event.nombreEven %></h1>
  </div>
  <div class="row">
    <div class="col-sm-5" style="text-align:right">
      <div style="font-size: 18px">
        <div>
          <strong>Responsable: </strong>
        </div>
        <div>
          <br>
          <strong>Descripción: </strong>
        </div>
        <div>
          <br>
          <strong>Departamento: </strong>
        </div>
        <div>
          <br>
          <strong>Ciudad: </strong>
        </div>
        <div>
          <br>
          <strong>Fecha: </strong>
        </div>
        <div>
          <br>
          <strong>Hora: </strong>
        </div>
        <div>
          <br>
          <strong>Teléfono: </strong>
        </div>
        <div>
          <br>
          <strong>Correo: </strong>
        </div>
        <div>
          <br>
          <%= link_to 'Editar evento', edit_event_path,class:"btn btn-primary" %>
        </div>
      </div>


    </div>
    <div class="col-sm-6" >
      <div style="font-size: 18px">
        <div>
          <%= @event.responsable %>
        </div>
        <div>
          <br>
          <%= @event.descripcion %><br>
        </div>
        <div>
          <br>
          <%= @event.departamento %><br>
        </div>
        <div>
          <br>
          <%= @event.lugar %><br>
        </div>
        <div>
          <br>
          <%= (@event.fechaHora).strftime(" %A, %w of %B") %><br>
        </div>
        <div>
          <br>
          <%= (@event.fechaHora).strftime(" %X %p") %><br>
        </div>

        <div>
          <br>
          <%= @event.telefono %><br>
        </div>
        <div>
          <br>
          <%= @event.email %><br>
        </div>
        <div>
          <br>
          <%= link_to 'Eliminar evento', event_path(),
                      method: :delete,
                      data: { confirm: 'Estas seguro de eliminarlo?' },class:"btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>

  <div>

    <p><%= link_to 'Volver', events_path %></p>

  </div>

</div>
